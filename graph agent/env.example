# BlockStat Backend Configuration
# Copy this file to .env and fill in your API keys

# Alchemy API (Primary - Faster)
# Get your key at: https://www.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key_here

# BitQuery API (Optional - Fallback)
# Get your access token at: https://graphql.bitquery.io/
# Note: BitQuery uses Access Token (not API Key), associated with an app
BITQUERY_ACCESS_TOKEN=your_bitquery_access_token_here

# Etherscan API (Recommended for fetching transactions)
# Get your free API key at: https://etherscan.io/apis (free: 5 req/sec)
# This is the fastest way to get token transactions
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Performance Tuning
MAX_HOLDERS=50
MAX_TRANSACTIONS_TO_FETCH=10000
TIMEOUT_SECONDS=25

# Graph Database Storage (Optional - for local visualization)
# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j

# Memgraph Configuration (Recommended - Faster)
MEMGRAPH_URI=bolt://localhost:7687
MEMGRAPH_USER=
MEMGRAPH_PASSWORD=

